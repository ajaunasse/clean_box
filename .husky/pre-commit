#!/bin/sh
echo "üîç Running pre-commit checks..."

# Format staged files with prettier
echo "üßπ Running prettier on staged files..."

# Get list of staged TypeScript files (only our source files, not node_modules)
BACKEND_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "^backend/.*\.ts$" | grep -v node_modules || true)
FRONTEND_FILES=$(git diff --cached --name-only --diff-filter=ACM | grep "^frontend/src/.*\.tsx\?$" | grep -v node_modules || true)

if [ -n "$BACKEND_FILES" ]; then
  echo "Formatting backend files..."
  echo "$BACKEND_FILES" | xargs npx prettier --write
  echo "$BACKEND_FILES" | xargs git add
fi

if [ -n "$FRONTEND_FILES" ]; then
  echo "Formatting frontend files..."
  echo "$FRONTEND_FILES" | xargs npx prettier --write
  echo "$FRONTEND_FILES" | xargs git add
fi

echo "‚úÖ Pre-commit checks passed!"
